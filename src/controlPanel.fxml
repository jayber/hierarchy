<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
            fx:controller="ManagerGraphController">
    <center>
        <GridPane>
            <children>
                <Label text="what the boss wants" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ColorPicker fx:id="colorPicker" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="layers" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="layers" prefWidth="200.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="fraction of independence" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="independence" prefWidth="200.0" text="0.25" GridPane.columnIndex="1"
                           GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" onAction="#doHierarchyDisplay" text="do" GridPane.columnIndex="1"
                        GridPane.rowIndex="3"/>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>
